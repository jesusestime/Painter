{% extends 'base.html.twig' %}

{% block title %}Blogposts{% endblock %}

{% block body %}
<section class="page-title bg-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h1>News</h1>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nisi, quibusdam.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="page-wrapper pricing-table section-card bg-gray">
	<div class="container">
		<div class="row">
            {% for b in blogposts %}
                <div class="col-md-4">
                    <div class="post  pricing-item p-4">
                        <h3 class="post-title"><a href="">{{ b.title }}</a></h3>
                        <div class="post-meta">
                           <small class=""><i class="ion-calendar"></i>  Posted {{ b.createdat |ago}}</small>
                        </div>
                        <div class="post-content   animated fadeInUp">
                           <p>{{ b.content|u.truncate(100,'...',false) }}</p>
                            <a href="blog-single.html" class="btn btn-main">Read More</a>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
    <div class="">
      {{ knp_pagination_render(blogposts,'layout/pagination.html.twig') }}
    </div>
</div>
{% endblock %}
