{% extends 'base.html.twig' %}

{% block title %}Portfolio{% endblock %}

{% block body %}
<section class="page-title bg-3">
  <div class="container">
    <div class="row">
      <div class="col-md-12">
        <div class="block">
          <h1>Portfolio</h1>
          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Nisi, quibusdam.</p>
        </div>
      </div>
    </div>
  </div>
</section>

<div class="page-wrapper pricing-table section-card bg-gray">
	<div class="container">
		<div class="row">
            {% for c in category %}
            {% set img = c.paints | last %}
                <div class="col-md-4">
                    <div class="post  pricing-item p-3">
                        <div class="post-meta">
                            <div class="post-thumb">
                                <a href="{{ path('app_portfolio_category',{'slug': c.slug}) }}">
                                    <img class="img-fluid" src="{{ img.file }}">
                                </a>
                            </div>
                        </div>
                         <h4 class="post-title"><a href="{{ path('app_portfolio_category',{'slug': c.slug}) }}">{{ c.name }}</a></h4>
                        <div class="post-content animated fadeInUp">
                           <p>{{ c.description|u.truncate(100,'...',false) }}</p>
                        </div>
                    </div>
                </div>
            {% endfor %}
        </div>
    </div>
</div>
{% endblock %}
